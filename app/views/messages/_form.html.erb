<div class="mt-auto">
  <%= form_with(model: [@room, @message], remote: true) do |f| %>
    <div class="input-group">
      <%= f.text_field :content, id: 'chat-text', class: "form-control msg-content", autocomplete: 'off', placeholder: "Digite sua mensagem" %>
      <div class="input-group-append">
        <%= f.submit data: { disable_with: false }, class: "btn btn-primary ms-2", value: "Enviar" %>
      </div>
    </div>
  <% end %>
</div>
